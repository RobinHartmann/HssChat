<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hss.sae.sue.chat.client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name="de.hss.sae.sue.chat.client.activities.EnterName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hss.sae.sue.chat.client.activities.EnterAddress"
            android:screenOrientation="portrait" />
        <activity
            android:name="de.hss.sae.sue.chat.client.activities.ChatRoom"
            android:screenOrientation="portrait" />
    </application>

</manifest>